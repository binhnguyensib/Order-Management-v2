{
    "version": 2,
    "builds": [
        {
            "src": "api/*.go",
            "use": "@vercel/go"
        }
    ],
    "routes": [
        { "src": "/api/health", "dest": "/api/index.go" },
        { "src": "/swagger/(.*)", "dest": "/api/index.go" },
        { "src": "/api/auth/(.*)", "dest": "/api/index.go" },
        { "src": "/api/customers/(.*)", "dest": "/api/index.go" },
        { "src": "/api/products/(.*)", "dest": "/api/index.go" },
        { "src": "/api/orders/(.*)", "dest": "/api/index.go" }
    ]
}